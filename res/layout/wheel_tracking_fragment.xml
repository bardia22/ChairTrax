<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
            	android:id="@+id/left_wheel_distance_traveled_title"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/left_wheel_distance_traveled_title" />
        
       		<TextView
	        	android:id="@+id/left_wheel_distance_traveled"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="0" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
            	android:id="@+id/x_title"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/x_title" />
        
       		<TextView
	        	android:id="@+id/x"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="0" />
        </LinearLayout>    
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
        
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
	        <TextView
	            android:id="@+id/right_wheel_distance_traveled_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/right_wheel_distance_traveled_title" />
	        
	        <TextView
		        android:id="@+id/right_wheel_distance_traveled"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="0" />
	   	</LinearLayout>
	   	
       <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
            	android:id="@+id/y_title"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/y_title" />
        
       		<TextView
	        	android:id="@+id/y"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="0" />
        </LinearLayout> 
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
       
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
	        <TextView
	            android:id="@+id/heading_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/heading_title" />
	        
	        <TextView
		        android:id="@+id/heading"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="0" />
       	</LinearLayout>
       	
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
	        <TextView
	            android:id="@+id/velocity_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/velocity_title" />
	        
	        <TextView
		        android:id="@+id/velocity"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="0" />
       	</LinearLayout>
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
	    <TextView
            android:id="@+id/wheel_radius_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wheel_radius_title" />
	    
	    <EditText
	        android:id="@+id/wheel_radius"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0.3" />
	</LinearLayout>
	
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
	    <TextView
            android:id="@+id/axle_length_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/axle_length_title" />
	    
	    <EditText
	        android:id="@+id/axle_length"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0.563" />
	</LinearLayout>
    
    <Button
    	android:id="@+id/reset_button"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/reset_button_title" />
    
	<com.jjoe64.graphview.GraphView
		android:layout_width="match_parent"
	    android:layout_height="200dip"
	    android:id="@+id/graph" /> 

</LinearLayout>
